[init]
  defaultBranch = main
  templatedir = ~/.git_template
[push]
  default = current
[color]
  ui = auto
[core]
  autocrlf = input
	editor = /usr/bin/vim
[commit]
  template = ~/.gitmessage
	gpgSign = true
[fetch]
  prune = true
[rebase]
  autosquash = true
	autoStash = true
[include]
  path = ~/.gitconfig.local
[diff]
  colorMoved = zebra
[pull]
	rebase = true
[user]
	signingKey = E13BB83EC0150CAA
	name = Andrew Wylde
	email = andrew.wylde@konghq.com
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
